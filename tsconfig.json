{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "exclude": ["__tests__/**/*-test.ts"],
  "include": ["./babel.config.js", "./.eslintrc.js", "./src/**/*", "./**/*"],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "es2020",
    "module": "commonjs",
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "~components/*": ["./src/components/*"],
      "~screens/*": ["./src/screens/*"]
    }
  }
}
